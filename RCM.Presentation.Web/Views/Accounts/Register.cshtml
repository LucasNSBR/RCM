@model RCM.CrossCutting.Identity.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Registrar-se";
}

<div class="login-container">
    <div class="px-1">
        <h5 class="font-bold">
            Registrar
        </h5>
        <p class="mt-0">
            Crie uma conta para obter acesso à plataforma
        </p>
    </div>

    <form asp-action="Register">
        <div class="row">
            <div class="input-field col s12 m6 mt-0">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="input-field" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="input-field col s12 m6 mt-0">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="input-field" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m3 l2 mt-0">
                <label asp-for="Age"></label>
                <input asp-for="Age" class="input-field" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m6 mt-0">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="input-field" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m6 mt-0">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="input-field" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="input-field col s12 m6 mt-0">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" class="input-field" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="px-1 pt-2">
            <post-button icon-name="launch">Criar Conta</post-button>
        </div>
    </form>
</div>

<div class="back-button">
    <a asp-action="Index" asp-controller="Home">Voltar para a Página Inicial</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}