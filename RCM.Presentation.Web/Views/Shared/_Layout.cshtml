<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | RCM Beta </title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/materialize/css/materialize.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/materialize/css/materialize.min.css"
              asp-fallback-href="~/lib/materialize/css/materialize.css" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <div class="row no-pad-top h-5 mb-0">
        <div class="col s12 m12 m-0 p-0 h-5">
            <div>
                <nav class="z-depth-2">
                    <div class="nav-wrapper bg-purple white-text px-2">
                        <a asp-action="Index" asp-controller="Home" asp-area="" class="brand-logo white-text font-italic">RCM</a>
                        <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>

                        @await Component.InvokeAsync("UserInformation")
                    </div>
                </nav>
            </div>
            @await Component.InvokeAsync("NotificationsBar")

            <div class="body-content">
                @RenderBody()
            </div>
        </div>
    </div>
    <footer class="page-footer bg-purple pb-3">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">RCM Beta</h5>
                    <p class="grey-text text-lighten-4">Solução simples para relacionamento de clientes e financeiro</p>
                </div>
                <div class="col l4 offset-l2 s12">
                    <h5 class="white-text">Links</h5>
                    <ul>
                        <li><a class="grey-text text-lighten-3" asp-action="Login" asp-controller="Accounts">Login</a></li>
                        <li><a class="grey-text text-lighten-3" asp-action="Register" asp-controller="Accounts">Criar Conta</a></li>
                        <li><a class="grey-text text-lighten-3 font-bold" href="https://github.com/LucasNSBR/RCM">Github</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>


    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/materialize/js/materialize.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/notifications.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="~/lib/materialize/js/materialize.min.js"
                asp-fallback-src="~/lib/materialize/js/materialize.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
        <script src="~/js/notifications.min.js" asp-append-version="true"></script>
    </environment>

    <script>
        var notifications = '@(Json.Serialize(TempData["Notifications"]))'
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>

