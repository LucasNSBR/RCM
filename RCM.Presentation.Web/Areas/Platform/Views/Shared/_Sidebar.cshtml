@{ var route = Url.GetControllerName(); }

<div id="sidebar" class="col s12 m2">
    <div class="z-depth-5" id="homeButton">
        <a asp-action="Index" asp-controller="Home" class="white-text">
            <i class="material-icons left">home</i>Home
        </a>
    </div>

    @* PC *@
    <ul class="collection no-border m-0">
        <li>
            <a asp-action="Index" asp-controller="Duplicatas" class="collection-item @(route == "duplicatas" ? "active" : "")">
                <i class="material-icons left tiny">payment</i>Duplicatas
            </a>
        </li>
        <li>
            <a asp-action="Index" asp-controller="Cheques" class="collection-item @(route == "cheques" ? "active" : "")">
                <i class="material-icons left tiny">note</i>Cheques
            </a>
        </li>
        <li>
            <a asp-action="Index" asp-controller="Clientes" class="collection-item @(route == "clientes" ? "active" : "")">
                <i class="material-icons left tiny">perm_identity</i>Clientes
            </a>
        </li>
        <li>
            <a asp-action="Index" asp-controller="Produtos" class="collection-item @(route == "produtos" ? "active" : "")">
                <i class="material-icons left tiny">shopping_basket</i>Estoque
            </a>
        </li>
        <li>
            <a asp-action="Index" asp-controller="Marcas" class="collection-item @(route == "marcas" ? "active" : "")">
                <i class="material-icons left tiny">loyalty</i>Marcas
            </a>
        </li>
        <li>
            <a asp-action="Index" asp-controller="Fornecedores" class="collection-item @(route == "fornecedores" ? "active" : "")">
                <i class="material-icons left tiny">store</i>Fornecedores
            </a>
        </li>
        <li>
            <a asp-action="Index" asp-controller="Vendas" class="collection-item @(route == "vendas" ? "active" : "")">
                <i class="material-icons left tiny">receipt</i>Vendas
            </a>
        </li>
        <li>
            <a asp-action="Index" asp-controller="Bancos" class="collection-item @(route == "bancos" ? "active" : "")">
                <i class="material-icons left tiny">account_balance</i>Bancos
            </a>
        </li>
        <li>
            <a asp-action="Index" asp-controller="Cidades" class="collection-item @(route == "cidades" ? "active" : "")">
                <i class="material-icons left tiny">pin_drop</i>Cidades
            </a>
        </li>
        <li>
            <a asp-action="Index" asp-controller="Empresa" class="collection-item @(route == "empresa" ? "active" : "")">
                <i class="material-icons left tiny">business</i>Empresa
            </a>
        </li>
    </ul>

    @* MOBILE SIDEBAR *@
    <div class="hide-on-med-and-up">
        <ul class="collection no-border m-0">
            <li>
                <a asp-action="Index" asp-controller="Settings" class="collection-item @(route == "notifications" ? "active" : "")">
                    <i class="material-icons center px-2">notifications</i>
                    Configurações
                </a>
            </li>
            <li>
                <a asp-action="Index" asp-controller="Settings" class="collection-item @(route == "settings" ? "active" : "")">
                    <i class="material-icons left">settings</i>
                    Ajustes
                </a>
            </li>
            <li>
                <a asp-action="Index" asp-controller="Profile" class="collection-item @(route == "profile" ? "active" : "")">
                    Perfil
                </a>
            </li>
            <li class="pb-1">
                <a asp-action="Logout" asp-controller="Accounts" asp-area="" class="collection-item">
                    Logout
                </a>
            </li>
        </ul>
    </div>
</div>



