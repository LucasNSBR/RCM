@model RCM.Application.ViewModels.VendaViewModels.VendaViewModel

<p class="px-1 font-bold lead">
    Informação geral
</p>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row">
    <div class="input-field col s12 m6">
        <label asp-for="DataVenda"></label>
        <input asp-for="DataVenda" type="text" class="datepicker" id="dataVenda" />
        <span asp-validation-for="DataVenda" class="text-danger"></span>
    </div>
</div>
<div class="row">
    <div class="col s12 m6">
        <label asp-for="Detalhes"></label>
        <textarea asp-for="Detalhes" class="materialize-textarea" data-length="1000"></textarea>
        <span asp-validation-for="Detalhes" class="text-danger"></span>
    </div>
</div>
<div class="row">
    <div class="input-field col s12 m6">
        <input type="hidden" asp-for="ClienteId" id="venda-id" />
        <select id="venda-select"></select>
        <label asp-for="ClienteId"></label>
        <span asp-validation-for="ClienteId" class="text-danger"></span>
        <a asp-action="Create" asp-controller="Clientes" target="_blank">Adicionar novo Cliente</a>
    </div>
    <div class="input-field col s12 m6 pt-1">
        <button class="btn-flat mx-0 small" id="reload-clientes-button" type="button">
            Recarregar lista
        </button>
    </div>
</div>
