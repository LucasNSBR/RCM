@model RCM.Application.ViewModels.ChequeViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row">
    <div class="col s12">
        <ul class="tabs tabs-fixed-width">
            <li class="tab col s3"><a href="#geral" class="active">Geral</a></li>
            <li class="tab col s3"><a href="#banco">Dados Bancários</a></li>
            <li class="tab col s3"><a href="#vencimento">Emissão/Vencimento</a></li>
            <li class="tab col s3"><a href="#cliente">Cliente</a></li>
        </ul>
    </div>

    <div id="geral" class="col s12 m12">
        <p class="px-1 font-bold lead">
            Informação Geral
        </p>

        <div class="row">
            <div class="input-field col s12 m6">
                <label asp-for="NumeroCheque"></label>
                <input asp-for="NumeroCheque" class="input-field" id="numeroDocumento" data-length="8"/>
                <span asp-validation-for="NumeroCheque" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m6">
                <label asp-for="Valor"></label>
                <input asp-for="Valor" class="input-field" id="valor" data-val-number="O valor deve estar em um formato válido." />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div id="banco" class="col s12 m12">
        <p class="px-1 pb-1 font-bold lead">
            Informações Bancárias do Cheque
        </p>
        <div class="row">
            <div class="input-field col s12 m6">
                <input type="hidden" asp-for="BancoId" id="bancoId"/>
                <select id="bancoSelect"></select>
                <label asp-for="BancoId"></label>
                <span asp-validation-for="BancoId" class="text-danger"></span>
                <a asp-action="Create" asp-controller="Bancos" target="_blank">Adicionar novo Banco</a>
            </div>
            <div class="input-field col s12 m6 pt-1">
                <button class="btn-flat mx-0 small" id="reload-bancos-button" type="button">
                    Recarregar lista
                </button>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m6">
                <label asp-for="Agencia"></label>
                <input asp-for="Agencia" class="input-field" id="agencia" data-length="5"/>
                <span asp-validation-for="Agencia" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m6">
                <label asp-for="Conta"></label>
                <input asp-for="Conta" class="input-field" id="conta" data-length="10"/>
                <span asp-validation-for="Conta" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div id="vencimento" class="col s12 m12">
        <p class="px-1 font-bold lead">
            Informações sobre Emissão e Vencimento
        </p>

        <div class="row">
            <div class="input-field col s12 m6">
                <label asp-for="DataEmissao"></label>
                <input asp-for="DataEmissao" type="text" class="datepicker" id="dataEmissao" />
                <span asp-validation-for="DataEmissao" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m6">
                <label asp-for="DataVencimento"></label>
                <input asp-for="DataVencimento" type="text" class="datepicker" id="dataVencimento" />
                <span asp-validation-for="DataVencimento" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div id="cliente" class="col s12 m12">
        <p class="px-1 font-bold lead">
            Informação sobre Responsável pelo Cheque
        </p>

        <div class="row">
            <div class="input-field col s12 m6">
                <input asp-for="ClienteId" type="hidden" id="clienteId"/>
                <select id="clienteSelect"></select>
                <label asp-for="ClienteId"></label>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
                <a asp-action="Create" asp-controller="Fornecedores" target="_blank">Adicionar novo Cliente</a>
            </div>
            <div class="input-field col s12 m6 pt-1">
                <button class="btn-flat mx-0 small" id="reload-clientes-button" type="button">
                    Recarregar lista
                </button>
            </div>
        </div>
    </div>
</div>