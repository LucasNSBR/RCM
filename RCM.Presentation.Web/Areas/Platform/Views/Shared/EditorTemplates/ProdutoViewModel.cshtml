@using RCM.Domain.Models.ProdutoModels

@model RCM.Application.ViewModels.ProdutoViewModels.ProdutoViewModel

<div class="row">
    <div class="col s12">
        <ul class="tabs tabs-fixed-width">
            <li class="tab col s3"><a href="#geral" class="active">Geral</a></li>
            <li class="tab col s3"><a href="#estoque">Estoque</a></li>
            <li class="tab col s3"><a href="#preco">Preço</a></li>
            <li class="tab col s3"><a href="#marca">Marca</a></li>
        </ul>
    </div>

    <div id="geral" class="col s12 m12">
        <p class="px-1 font-bold lead">
            Informação Geral
        </p>

        <div class="row">
            <div class="input-field col s12 m6">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" class="input-field" id="nome" data-length="100" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m6">
                <select asp-for="Unidade" asp-items="@(new SelectList(Enum.GetNames(typeof(ProdutoUnidadeEnum)).ToList()))" class="input-field" id="unidade"></select>
                <label for="unidade">Tipo de Unidade</label>
                <span asp-validation-for="Unidade" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m6">
                <label asp-for="ReferenciaFabricante"></label>
                <input asp-for="ReferenciaFabricante" class="input-field" id="referencia-fabricante" data-length="25" />
                <span asp-validation-for="ReferenciaFabricante" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m6">
                <label asp-for="ReferenciaOriginal"></label>
                <input asp-for="ReferenciaOriginal" class="input-field" id="referencia-original" data-length="25" />
                <span asp-validation-for="ReferenciaOriginal" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m6">
                <label asp-for="ReferenciaAuxiliar"></label>
                <input asp-for="ReferenciaAuxiliar" class="input-field" id="referencia-auxiliar" data-length="50" />
                <span asp-validation-for="ReferenciaAuxiliar" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div id="estoque" class="col s12 m12">
        <div>
            <p class="px-1 font-bold lead">
                Informações sobre estoque
            </p>

            <div class="row">
                <div class="input-field col s12 m6">
                    <label asp-for="Estoque"></label>
                    <input asp-for="Estoque" class="input-field" id="estoque" data-length="4" />
                    <span asp-validation-for="Estoque" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m6">
                    <label asp-for="EstoqueMinimo"></label>
                    <input asp-for="EstoqueMinimo" class="input-field" data-length="4" />
                    <span asp-validation-for="EstoqueMinimo" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m6">
                    <label asp-for="EstoqueIdeal"></label>
                    <input asp-for="EstoqueIdeal" class="input-field" data-length="4" />
                    <span asp-validation-for="EstoqueIdeal" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div id="preco" class="col s12 m12">
        <p class="px-1 font-bold lead">
            Informações sobre Preços
        </p>
        <div class="row">
            <div class="input-field col s12 m6">
                <label asp-for="PrecoVenda"></label>
                <input asp-for="PrecoVenda" class="input-field" id="precoVenda" />
                <span asp-validation-for="PrecoVenda" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div id="marca" class="col s12 m12">
        <div>
            <p class="px-1 font-bold lead">
                Informação sobre Marca
            </p>
            <div class="input-field col s12 m6">
                <input type="hidden" asp-for="MarcaId" id="marca-id" />
                <select id="marca-select"></select>
                <label asp-for="MarcaId"></label>
                <span asp-validation-for="MarcaId" class="text-danger"></span>
                <a asp-action="Create" asp-controller="Marcas" target="_blank">Adicionar nova Marca</a>
            </div>
            <div class="input-field col s12 m6 pt-1">
                <button class="btn-flat mx-0 small" id="reload-marcas-button" type="button">
                    Recarregar lista
                </button>
            </div>
        </div>
    </div>
</div>