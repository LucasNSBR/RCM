@model RCM.Application.ViewModels.ChequeViewModels.ChequeViewModel

@{
    ViewData["Title"] = $"Detalhes - {Model.NumeroCheque}";
}

<h5>Detalhes do Cheque - @Model.NumeroCheque</h5>

<div class="form-container col s12 m12">
    @Html.DisplayForModel()
    
    <div class="row center pt-3">
        <action-button asp-action="Edit" asp-controller="Cheques" asp-area="Platform" asp-route-id="@Model.Id" icon-name="edit">Editar</action-button>        
        <action-button asp-action="Delete" asp-controller="Cheques" asp-area="Platform" asp-route-id="@Model.Id" icon-name="delete">Excluir</action-button>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>